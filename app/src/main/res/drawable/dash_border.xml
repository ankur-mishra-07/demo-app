<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <stroke
                android:dashGap="5dp"
                android:dashWidth="5dp"
                android:width="1dp"
                android:color="@color/editBelow" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners
                android:bottomLeftRadius="@dimen/dim20dp"
                android:bottomRightRadius="@dimen/dim20dp"
                android:radius="@dimen/dim20dp" />
        </shape>
    </item>
</layer-list>